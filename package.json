{
	"name": "angular2-practice",
	"version": "0.1.0",
	"description": "A random project to learn and practice Angular2",
	"main": "./dist/bundle.js",
	"scripts": {
		"serve": "lite-server",
		"clean": "rimraf dist/*",
		"html": "copyfiles --up 1 'src/**/*.html' dist/",
		"js": "browserify src/main.ts --debug --plugin tsify --transform babelify | exorcist dist/bundle.js.map > dist/bundle.js",
		"build": "npm run clean && npm run html && npm run js",
		"watch:html": "onchange 'src/**/*.html' -- npm run html",
		"watch:js": "watchify src/main.ts --debug --verbose --plugin tsify --transform babelify -o 'exorcist dist/bundle.js.map > dist/bundle.js'",
		"watch:all": "npm run clean && npm run html && npm-run-all --parallel watch:js watch:html",
		"start": "npm-run-all --parallel watch:all serve"
	},
	"author": "Victor Cazanave",
	"license": "MIT",
	"homepage": "https://github.com/VictorCazanave/angular2-practice",
	"repository": {
		"type": "git",
		"url": "https://github.com/VictorCazanave/angular2-practice.git"
	},
	"devDependencies": {
		"@types/node": "^7.0.4",
		"babel-preset-es2015": "^6.22.0",
		"babelify": "^7.3.0",
		"browserify": "^13.3.0",
		"copyfiles": "^1.1.1",
		"del": "^2.2.2",
		"exorcist": "^0.4.0",
		"gulp": "^3.9.1",
		"gulp-sourcemaps": "^2.4.0",
		"gulp-typescript": "^3.1.4",
		"gulp-uglify": "^2.0.0",
		"gulp-util": "^3.0.8",
		"lite-server": "^2.2.2",
		"onchange": "^3.2.1",
		"rimraf": "^2.5.4",
		"tsify": "^3.0.0",
		"typescript": "^2.1.5",
		"uglify-to-browserify": "^1.0.2",
		"uglifyify": "^3.0.4",
		"uglifyjs": "^2.4.10",
		"vinyl-buffer": "^1.0.0",
		"vinyl-source-stream": "^1.1.0",
		"watchify": "^3.8.0"
	},
	"dependencies": {
		"@angular/common": "^2.4.4",
		"@angular/compiler": "^2.4.4",
		"@angular/core": "^2.4.4",
		"@angular/forms": "^2.4.4",
		"@angular/http": "^2.4.4",
		"@angular/platform-browser": "^2.4.4",
		"@angular/platform-browser-dynamic": "^2.4.4",
		"@angular/router": "^3.4.4",
		"rxjs": "^5.0.3",
		"zone.js": "^0.7.6"
	}
}
